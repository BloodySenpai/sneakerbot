{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,

    "lib": [
      "dom",
      "dom.iterable",
      "es2017"
    ],

    "module": "commonjs",

    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "outDir": "lib",

    "resolveJsonModule": true,
    "rootDir": "src",

    "strict": true,
    "sourceMap": true,

    "target": "esnext",
    "typeRoots": [
      "./node_modules/@types"
    ],
  },

  "include": [
    "./src/**/*",
    "./types/**/*",
  ]
}
